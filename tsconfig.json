{
    "compilerOptions": {
        "target": "es2017",
        "allowJs": true,
        "skipLibCheck": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": false,
        "module": "ES6",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": false,
        "lib": ["es6", "dom"],
        "outDir": "build"
    },
    "include": ["src/**/*.ts"]
}
